<form class="{{cssClass}}" data-tooltip-class="pf1" autocomplete="off">
    <div class="flexcol">
        <div class="form-group stacked">
            <label class="checkbox">
                <input type="checkbox" name="restoreHealth" checked> {{localize "PF1.RestoreHealth"}}
            </label>

            <label class="checkbox">
                <input type="checkbox" name="restoreDailyUses" checked> {{localize "PF1.RestoreDailyUses"}}
            </label>

            <label class="checkbox">
                <input type="checkbox" name="longTermCare"> {{localize "PF1.LongTermCare"}}
            </label>
        </div>

        <div class="form-group">
            <label>{{localize "PF1ECaravans.Rest.MagicalProvisions"}}</label>
            <input type="number" data-dtype="Number" name="magicalProvisions" value="0">
        </div>
    </div>

    <button type="submit" name="submit">
        <i class="fa fa-bed"></i>
        {{localize "PF1.Rest"}}
    </button>
</form>
