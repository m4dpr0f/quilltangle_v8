<Layout title="Announcements - 8xM">
  <div class="py-8 max-w-4xl mx-auto">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold mb-4">Announcements</h1>
      <p class="text-gray-400">Latest news and updates from the Quillverse ecosystem</p>
    </div>

    <div class="space-y-6">
      <!-- Rainbow Roads to Redemption -->
      <a href="/announcements/rainbow-roads-to-redemption" class="block card hover:border-purple-400 transition group">
        <div class="flex items-start gap-4">
          <div class="w-16 h-16 bg-gradient-to-br from-purple-600 to-cyan-600 rounded-lg flex items-center justify-center text-2xl flex-shrink-0 group-hover:scale-110 transition">
            üåà
          </div>
          <div class="flex-1">
            <div class="flex items-center gap-2 mb-1">
              <span class="text-xs bg-purple-600 px-2 py-0.5 rounded">PARTNERSHIP</span>
              <span class="text-xs text-gray-500">January 2025</span>
            </div>
            <h2 class="text-xl font-bold mb-2 group-hover:text-purple-400 transition">
              Rainbow Roads to Redemption
            </h2>
