---
import Layout from '../layouts/Layout.astro';
import RoadSelector from '../islands/RoadSelector';
---

<Layout title="Rainbow Roads">
  <h1 class="text-3xl font-bold mb-6">Rainbow Roads</h1>
  <p class="text-gray-400 mb-8">
    Claim your road for the GCN Challenge. 40 roads available across 8 dice types and 5 directions.
  </p>
  
  <div class="grid md:grid-cols-3 gap-4 mb-8">
    <div class="card road-qlx text-center">
      <h3 class="font-bold text-green-400">QLX Realm (OUT)</h3>
      <p class="text-sm text-gray-400">8 roads</p>
    </div>
    <div class="card road-qly text-center">
      <h3 class="font-bold text-orange-400">QLY Realm (UP/DWN)</h3>
      <p class="text-sm text-gray-400">16 roads</p>
    </div>
    <div class="card road-qlz text-center">
      <h3 class="font-bold text-purple-400">QLZ Realm (U45/D45)</h3>
      <p class="text-sm text-gray-400">16 roads</p>
    </div>
  </div>
  
  <RoadSelector client:load />
</Layout>
