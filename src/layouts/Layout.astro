---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="8xM - Rainbow Roads Token Platform" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | 8xM</title>
  </head>
  <body>
    <nav class="border-b border-gray-700 px-6 py-4">
      <div class="max-w-6xl mx-auto flex items-center justify-between">
        <a href="/" class="text-2xl font-bold bg-gradient-to-r from-purple-400 to-blue-400 bg-clip-text text-transparent">
          8xM
        </a>
        <div class="flex gap-6 items-center">
          <a href="/qlxyz" class="bg-gradient-to-r from-yellow-500 via-purple-500 to-cyan-500 px-4 py-2 rounded-full text-white font-medium hover:opacity-90 transition">QLX•QLY•QLZ</a>
          <a href="/give" class="bg-gradient-to-r from-amber-500 to-orange-500 px-4 py-2 rounded-full text-white font-medium hover:opacity-90 transition">Give</a>
          <a href="/apply" class="bg-gradient-to-r from-green-600 to-purple-600 px-4 py-2 rounded-full text-white font-medium hover:opacity-90 transition">Apply</a>
          <a href="/journey" class="hover:text-purple-400 transition">Journey</a>
          <a href="/garu" class="bg-gradient-to-r from-amber-400 to-pink-400 px-3 py-1 rounded-full text-white font-medium hover:opacity-90 transition text-sm">Garu</a>
          <a href="/create" class="hover:text-purple-400 transition">Create Token</a>
          <a href="/swap" class="hover:text-purple-400 transition">LotusXchange</a>
          <a href="/roads" class="hover:text-purple-400 transition">Rainbow Roads</a>
          <a href="/dashboard" class="hover:text-purple-400 transition">Metaphysics</a>
          <div id="wallet-button"></div>
        </div>
      </div>
    </nav>
    
    <main class="max-w-6xl mx-auto px-6 py-8">
      <slot />
    </main>
    
    <footer class="border-t border-gray-700 px-6 py-4 mt-auto">
      <div class="max-w-6xl mx-auto text-center text-gray-500 text-sm">
        8xM Platform &bull; Quillverse Ecosystem &bull; Rainbow Roads GCN Challenge
      </div>
    </footer>
  </body>
</html>
